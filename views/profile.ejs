<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Profile | Farmcure</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>
<body class="bg-gray-100 font-sans">
<div class="flex-1 p-4 flex flex-col">
  <!-- Navbar -->
  <nav class="bg-white rounded-2xl border-2 border-gray-200 p-2 flex justify-around flex-wrap shadow-md">
    <div class="w-1/2 text-xl lg:px-20 md:px-10">
      <h1 class="text-xl font-bold text-blue-600">Farmcure</h1>
    </div>
    <div class="w-1/2 flex justify-evenly items-center">
      <a href="/" class="px-3 hover:bg-gray-300 hover:rounded-lg">Home</a>
      <a href="/services" class="px-3 hover:bg-gray-300 hover:rounded-lg">Services</a>
      <a href="/about" class="px-3 hover:bg-gray-300 hover:rounded-lg">About Us</a>
      <a href="/help" class="px-3 hover:bg-gray-300 hover:rounded-lg">Help</a>

      <% if (user) { %>
        <a href="/users/profile" class="flex flex-wrap justify-center items-center">
          <h3 class="mr-2"><%= user.fullname %></h3>
          <img src="<%= user.picture || '/images/raja.jpg' %>" alt="profilePic" class="rounded-full w-10 h-10 bg-gray-300">
        </a>
      <% } else { %>
        <a href="/users/login" class="px-4 py-2 bg-blue-500 text-white rounded-lg">Login</a>
      <% } %>
    </div>
  </nav>

  <!-- Profile Section -->
  <main class="container mx-auto px-6 py-12">
    <div class="bg-white rounded-2xl shadow-lg p-8 grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Left Column -->
      <div class="flex flex-col items-center border-r md:pr-8">
        <!-- Profile Picture -->
        <div class="relative">
          <img src="<%= user.picture || 'https://www.svgrepo.com/show/452030/avatar.svg' %>" 
               alt="Profile Picture" 
               class="w-32 h-32 rounded-full border-4 border-blue-500 shadow-md mb-4">
          <button class="absolute bottom-4 right-2 bg-blue-600 text-white p-2 rounded-full shadow hover:bg-blue-700">
            <ion-icon name="camera-outline"></ion-icon>
          </button>
        </div>
        <h2 class="text-2xl font-bold text-gray-800"><%= user.fullname %></h2>
        <p class="text-blue-600 font-medium">Farmer | AgriTech Explorer</p>

        <!-- Stats -->
        <div class="mt-8 space-y-4 w-full">
          <div class="bg-blue-50 p-4 rounded-xl text-center">
            <h4 class="text-xl font-bold text-blue-600"><%= user.stats?.analyzed || "0" %>+</h4>
            <p class="text-gray-600">Crops Analyzed</p>
          </div>
          <div class="bg-blue-50 p-4 rounded-xl text-center">
            <h4 class="text-xl font-bold text-blue-600"><%= user.stats?.experience || "0" %>+</h4>
            <p class="text-gray-600">Years Experience</p>
          </div>
          <div class="bg-blue-50 p-4 rounded-xl text-center">
            <h4 class="text-xl font-bold text-blue-600"><%= user.stats?.trained || "0" %>+</h4>
            <p class="text-gray-600">Farmers Trained</p>
          </div>
        </div>
      </div>

      <!-- Right Column -->
      <div class="col-span-2 flex flex-col justify-center">
        <h3 class="text-xl font-bold text-gray-800 mb-6">Profile Information</h3>

        <form action="/users/update" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Email -->
          <div>
            <label class="block text-gray-600 mb-1">Email</label>
            <input type="text" name="email" value="<%= user.email %>" disabled
                   class="w-full px-4 py-2 rounded-lg bg-gray-100 border border-gray-300 text-gray-600">
          </div>

          <!-- Mobile -->
          <div>
            <label class="block text-gray-600 mb-1">Mobile Number</label>
            <input type="text" name="contact" value="<%= user.contact || '' %>"
                   class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-100">
          </div>

          <!-- Location -->
          <div>
            <label class="block text-gray-600 mb-1">Location</label>
            <input type="text" name="location" value="<%= user.location || '' %>"
                   class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-100">
          </div>

          <!-- Joined Date -->
          <div>
            <label class="block text-gray-600 mb-1">Joined</label>
            <input type="text" value="<%= user.createdAt ? user.createdAt.toDateString() : 'N/A' %>" disabled
                   class="w-full px-4 py-2 rounded-lg bg-gray-100 border border-gray-300 text-gray-600">
          </div>

          <!-- Save Button -->
          <div class="col-span-2">
            <button type="submit" class="mt-8 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold shadow-md transition">
              Save Changes
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>

<!-- Footer -->
<footer class="bg-gray-900 text-white text-center py-4 mt-10">
  <p>Â© 2025 Farmcure Team | All Rights Reserved</p>
</footer>

</body>
</html>
